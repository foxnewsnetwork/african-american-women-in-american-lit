<div class="user_info">
  <a href="<%= user_path(current_user) %>">
    <%= gravatar_for current_user, :size => 30 %>
    <span class="user_name">
      <%= current_user.username %>
    </span>
    <span class="macroposts">
      <%= pluralize(current_user.macroposts.count, "macropost") %>
    </span>
  </a>
</div>
